@model IEnumerable<InfinityPlay.Models.HomeModels.ALBUM>

<div class="gradientBG vh-100">
    <div class="container">
        <div class="head-text d-block p-3">
            <div class="mb-2 mt-4 title">
                <h2>Albums</h2>
            </div>
        </div>
        <div class="grid-row">
            @foreach (var item in Model)
            {
                <div class="col-xs-6 col-sm-5 col-6 col-md-4 col-lg-3 col-xl-2 d-inline-block flex-row">
                    <div class="media-object" style="max-width: 300px;">
                        <div class="media-object-hoverable">
                            <div class="media-object-wrapper">
                                <img src="@item.ALBUM_ART" class="img-fluid img-thumbnail image" />
                                <div class="overlay_image">
                                    <div class="cover-art play-icon play-album-link" aria-hidden="true" data-albumid="@item.ALBUM_ID">
                                        <i class="far fa-play-circle"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mo-info">
                            <div class="mo-info-album" href="/album/@item.ALBUM_ID">
                                <div>@item.ALBUM_NAME</div>
                            </div>
                            <div>
                                <div class="mo-info-artist">/artist/@item.BAND_NAME</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.play-album-link').click(function () {
            const albumid = $(this).attr('data-albumid');
            const url = '/Album/' + albumid;
            history.pushState(null, null, url);
            $('#mainContent').load("/partial" + url, "", function () {
                Grade(document.querySelectorAll(''));
            });
        });
    });
</script>